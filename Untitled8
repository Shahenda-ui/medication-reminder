<script>
// Store medications data
const medications = {};

// Page Navigation
function showPage(pageId) {
  const pages = document.querySelectorAll('.page');
  const buttons = document.querySelectorAll('nav button');
  
  pages.forEach(p => p.classList.remove('active'));
  buttons.forEach(b => b.classList.remove('active'));
  
  document.getElementById(pageId).classList.add('active');
  event.target.classList.add('active');
}

// Mark medicine as taken
function markTaken(medName) {
  alert(`ุชู ุชุณุฌูู ุชูุงูู ${medName} ุจูุฌุงุญ! โ`);
}

// Set reminder
function setReminder(medName) {
  document.getElementById('medName').textContent = medName;
  document.querySelector('.overlay').classList.add('show');
  document.querySelector('.reminder-alert').classList.add('show');
}

// Close reminder
function closeReminder() {
  document.querySelector('.overlay').classList.remove('show');
  document.querySelector('.reminder-alert').classList.remove('show');
}

// Edit medicine
function editMed(medName) {
  alert(`ูุชุญ ุตูุญุฉ ุชุนุฏูู ${medName}`);
  showPage('add');
}

